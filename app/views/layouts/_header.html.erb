<div class="col-md-12">
  <div class="row padding_top_60">
    <div class="col-md-4 col-md-offset-1">
      <%= link_to image_tag("logo.png") %>
    </div>
    <div class="col-md-2 col-md-offset-4">
      <i class="glyphicon glyphicon-shopping-cart shop_cart"></i>
    </div>
  </div>
</div>
<div class="col-md-12">
  <div class="row header-store">
    <div class="col-md-2 col-md-offset-1 font_size_30 font_opensans font_bold color_white padding_top_20 border_cat cursor_pointer"
         data-toggle="dropdown" id="dLabel2">Categories
      <i class="glyphicon glyphicon-menu-hamburger font_size_20"> </i></div>

    <ul class="dropdown-menu ul_categories font_opensans" aria-labelledby="dLabel2" style="margin-left:150px;color:black;">
      <% @categories.each do |category| %>
          <li class="category_id"><%= link_to category.title, "#", :'data-id' => category.id %></li>
    <% end %>
    </ul>

    <div class="col-md-6">
      <ul class="font_opensans color_white ul_header">
        <li><%= link_to "Home", '#' %></li>
        <li><%= link_to 'My account', '#', id: 'dLabel', class: 'li_header_acc', :'data-toggle' => 'dropdown' %>
          <span class="caret"></span>
          <ul class="dropdown-menu" aria-labelledby="dLabel" style="margin-left:150px;color:black;">
            <%= link_to "Register", new_user_path %><br/>
            <%= link_to "Login", "#" %>
          </ul>
        </li>
        <li><%= link_to "Shopping cart", '#' %></li>
      </ul>
    </div>
  </div>
</div>