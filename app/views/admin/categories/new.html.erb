<div class="row">
  <div class="col-md-4 col-md-offset-4">

    <%= form_for @category, url: admin_categories_path, html: {class: 'font_opensans form_register'} do |f| %>
        <div class="font_opensans font_size_20 text_align_center">Add new category</div>
        <br/>
        <%= render 'admin/shared/flash_category' %>

        <%= f.text_field :title, placeholder: 'Enter category title' %>

        <%= f.submit 'Create a category', class: 'btn btn-large btn-register' %>
    <% end %>

  </div>
</div>
