<%= render 'admin/shared/flash_success' %>
<div class="font_opensans font_size_14">
  <label>You can add a new author </label>
  <%= link_to 'Add new book', new_admin_book_path %>
</div>
<table class="table table-bordered table-hover font_opensans font_size_14 background_white">
  <caption>All books</caption>
  <tr>
    <td>Title</td>
    <td style="width: 60%;">Description</td>
    <td>Price</td>
    <td>In stock</td>
    <td>Delete</td>
  </tr>
  <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.description %></td>
        <td><%= book.price %></td>
        <td><%= book.in_stock %></td>
        <td><%= link_to raw('<i class="glyphicon glyphicon-remove"> </i> Delete<br/>'), url_for(action: :destroy, id: book.id), method: :delete, data: {confirm: "Are you sure?"} %>
          <%= link_to raw('<i class="glyphicon glyphicon-pencil"> </i> Edit'), url_for(action: :edit, id: book.id), method: :get %></td>
      </tr>
  <% end %>
</table>