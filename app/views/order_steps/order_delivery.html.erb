<div class="col-md-12">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= form_tag(wizard_path, method: :patch, class: 'font_opensans form_register') do %>
          <div class="font_opensans font_size_20 text_align_center">Delivery</div>
          <%= render 'shared/error_delivery' %>
          <br/>
          <% @form.delivery.each do |delivery| %>
              <%= label_tag(:price_title, delivery.title) %>
              <%= radio_button_tag('delivery[id]', delivery.id, delivery == @cart.delivery) %>
          <% end %>
          <%= submit_tag 'Save and continue', class: "btn btn-large btn-register" %>
      <% end %>
      <%= link_to 'Back', previous_wizard_path %>
    </div>
  </div>
</div>