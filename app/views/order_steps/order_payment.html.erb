<div class="col-md-12">
  <div class="row">

    <div class="col-md-4 col-md-offset-4">

      <%= form_for @credit_card, url: wizard_path, method: :patch, html: {class: 'font_opensans form_register'} do |f| %>
          <div class="font_opensans text_align_center font_weight_600">Fill credit card informtion</div><br/>

          <%= render partial: 'shared/error_order', locals:{ entity: [@credit_card] } %>

          <%= f.text_field :number, placeholder: 'Number' %>
          <%= f.text_field :CVV, placeholder: 'CVV' %>
          <%= f.text_field :first_name, placeholder: 'First name' %>
          <%= f.text_field :last_name, placeholder: 'Last name' %>

          <%= label_tag 'Expiration month' %>
          <%= f.select :expiration_month, options_for_select(1..12, @credit_card.expiration_month) %>

          <%= label_tag 'Expiration year' %>
          <%= f.select :expiration_year, options_for_select(Date.today.year - 5.. Date.today.year + 5, @credit_card.expiration_year) %>

          <%= f.submit 'Save and continue', class: 'btn btn-large btn-register' %>
      <% end %>

      <%= link_to 'Back', previous_wizard_path %>

    </div>
  </div>
</div>