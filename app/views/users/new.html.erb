<div class="col-md-12">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= form_for @user, html: {class: 'font_opensans form_register'} do |f| %>
          <div class="font_opensans font_size_20 text_align_center">Sign Up</div><br/>
          <%= render 'shared/errors_user' %>
          <%= f.text_field :name, placeholder: 'Enter name' %>

          <%= f.text_field :email, placeholder: 'Enter email' %>

          <ul>
            Address information:<br/>
            <%= label :billing_address, 'Enter billing address' %>
            <%= text_field_tag 'user[address_attributes][billing_address]', nil, placeholder: 'Enter billing address' %>
            <%= label :billing_address, 'Enter shipping address' %>
            <%= text_field_tag 'user[address_attributes][shipping_address]', nil, placeholder: 'Enter shipping address' %>
          </ul>

          <%= f.password_field :password, placeholder: 'Enter password' %>

          <%= f.password_field :password_confirmation, placeholder: 'Confirm password' %>

          <%= f.submit "Register", class: "btn btn-large btn-register" %>
      <% end %>
    </div>
  </div>
</div>