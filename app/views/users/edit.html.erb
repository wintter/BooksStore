<div class="col-md-12">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= form_for ([@user]), html: {class: 'font_opensans form_register'} do |f| %>

          <div class="font_opensans font_size_20 text_align_center color_slider_top"><i class="glyphicon glyphicon-pencil pull-left"></i> Your account</div><br/>
          <%= render 'shared/errors_user' %>

          <%= f.label :name %>
          <%= f.text_field :name %>

          <%= f.label :email %>
          <%= f.text_field :email %>

          <ul>
            <%= f.fields_for :address do |address_form| %>

                <%= address_form.label :billing_address %>
                <%= address_form.text_field :billing_address %>

                <%= address_form.label :shipping_address %>
                <%= address_form.text_field :shipping_address %>

            <% end %>
          </ul>

          <%= link_to 'Click to edit your CreditCards:', '#', class: 'link_credit_card' %>

          <ul class="credit_carts_forms hide">
            <%= f.fields_for :credit_cards do |credit_cards_form| %>

                  <%= credit_cards_form.label :number %>
                  <%= credit_cards_form.text_field :number %>

                  <%= credit_cards_form.label :CVV %>
                  <%= credit_cards_form.text_field :CVV %>

            <% end %>
          </ul>
          <br/><br/>

          <%= f.label :password %>
          <%= f.password_field :password %>

          <%= f.label :password_confirmation, "Confirm Password" %>
          <%= f.password_field :password_confirmation %>

          <%= f.submit "Update", class: "btn btn-large btn-register" %>

      <% end %>

    </div>
  </div>
</div>