<div class="col-md-12">
  <% flash.each do |key, value| %>
      <div class="alert alert-warning" role="alert"><%= value %></div>
  <% end %>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= form_tag(auths_path, class: 'font_opensans form_register') do %>
          <div class="font_opensans font_size_20 text_align_center">Sign In</div><br/>
          <%= text_field_tag :email, nil, placeholder: 'Enter email' %>
          <%= password_field_tag :password, nil, placeholder: 'Enter password' %>
          <%= submit_tag 'Login', class: "btn btn-large btn-register" %>
      <% end %>
      <div class="font_opensans">New user? <%= link_to 'Register', new_user_path %></div>
    </div>
  </div>
</div>