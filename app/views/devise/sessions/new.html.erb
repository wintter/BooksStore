<div class="col-md-12">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'font_opensans form_register'}) do |f| %>
          <%= devise_error_messages! %>

          <%= render '/shared/flash_success' %>

          <div class="field">
            <%= f.label :email %><br/>
            <%= f.email_field :email, autofocus: true %>
          </div>

          <div class="field">
            <%= f.label :password %><br/>
            <%= f.password_field :password, autocomplete: "off" %>
          </div>

          <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
          <% end -%>

          <div class="actions">
            <%= f.submit "Log in", class: "btn btn-large btn-register" %>
          </div>
          <br/>

          <%= link_to raw('login<span> with facebook</span>') , user_omniauth_authorize_path(:facebook), class: 'btnf fb' %>

    <% end %>


      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
